doctype html
head
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  // <meta http-equiv="X-UA-Compatible" content="ie=edge">
  title TechStore
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
  link(rel='stylesheet', href='/styles/app.css')
  link(rel='stylesheet', href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css')
.container
  .main
    // Section: Design Block
    section.text-center
      // Background image
      .p-5.bg-image(style="\
      background-image: url('https://img.wallpapic.com/i4258-129-113/thumb/abstract-lights-red-orange-wallpaper.jpg');\
      height: 300px; width:1000px;\
      ")
      // Background image
      .card.mx-4.mx-md-5.shadow-5-strong(style='\
      margin-top: -100px;\
      background: hsla(0, 0%, 100%, 0.8);\
      backdrop-filter: blur(30px);\
      ')
        .card-body.py-5.px-md-5
          .row.d-flex.justify-content-center
            .col-lg-7
              form#form.form(action='', method='POST')
                h3.heading Sign up now
                p.desc Happiness is not in money, but in shopping &#x2764;&#xFE0F;&#x2764;&#xFE0F;
                .form-control
                  input#username(autocomplete='off', name='username', type='text', placeholder='User name')
                  span.form-message
                  i.fas.fa-check-circle  
                  i.fas.fa-exclamation-circle  
                  small Error message
                .form-control
                  input#email(autocomplete='off', name='email', type='text', placeholder='Email')
                  span.form-message
                  i.fas.fa-check-circle  
                  i.fas.fa-exclamation-circle  
                  small Error message
                .form-control
                  input#password(autocomplete='off', name='password', type='password', placeholder='Password')
                  span.form-message
                  i.fas.fa-check-circle  
                  i.fas.fa-exclamation-circle  
                  small Error message
                .form-control
                  input#password2(autocomplete='off', name='password2', placeholder='Confirm Password', type='password')
                  span.form-message
                  i.fas.fa-check-circle  
                  i.fas.fa-exclamation-circle  
                  small Error message
                button Submit
script.
  src="./ValidatorSignup.js"
